<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/PostActityAttachment"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/PostActityContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/comments"/>
                    <ListView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/PostCommentsList"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:orientation="horizontal">
                        <EditText
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:hint="@string/prompt_enter_comment"
                            android:id="@+id/PostCommentText"/>
                    <CheckBox
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:id="@+id/PostCommentAnon"/>
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="right"
                            android:id="@+id/PostSendComment"/>
                    </LinearLayout>
                </LinearLayout>
        </LinearLayout>

    </ScrollView>
    
</LinearLayout>
